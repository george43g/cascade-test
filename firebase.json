{
  "firestore": {
    "rules": "rules/firestore.rules",
    "indexes": "rules/firestore.index.json"
  },
  "functions": {
    "predeploy": ["echo predeploy firebase hook"]
  },
  "hosting": {
    "public": "dist/apps/game-library",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}
